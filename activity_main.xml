<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:background="@drawable/back"
    tools:context=".MainActivity">

<EditText
    android:id="@+id/search_url"
    android:layout_width="300dp"
    android:layout_height="30dp"
    android:background="@color/white"
    android:hint="Type or Paste Url.."
    android:textColorHint="@color/black"
    android:textAlignment="center"
    android:textColor="@color/black">

</EditText>
    <Button
        android:id="@+id/search_btn_home"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/search_url"
        android:background="@color/purple_200"
        android:text="Search"
        >

    </Button>
    <Button
        android:id="@+id/facebook"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="250dp"
        android:background="#3159EC"
        android:text="Facebook"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        >
    </Button>
    <Button
        android:id="@+id/youtube"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="220dp"
        android:background="#F80D0D"
        android:text="Youtube"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        >

    </Button>
    <Button
        android:id="@+id/instagram"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="220dp"
        android:background="@color/white"
        android:text="Instagram"
        android:textStyle="bold"
        android:textSize="16sp"
        >
    </Button>
    <Button
        android:id="@+id/snapchat"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="25dp"
        android:background="#FF9800"
        android:text="Snapchat"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        >
    </Button>
    <Button
        android:id="@+id/google"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="220dp"
        android:background="#44B848"
        android:text="Google"
        android:textSize="16sp"
        android:textStyle="bold"
        >
    </Button>
    <Button
        android:id="@+id/yahoo"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="25dp"
        android:background="#26E1D1"
        android:text="Yahoo"
        android:textStyle="bold"
        android:textSize="16sp"
        >
    </Button>


</RelativeLayout>